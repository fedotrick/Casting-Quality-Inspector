# Quality Control System Configuration

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret key for session management (REQUIRED FOR PRODUCTION)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Session Configuration
SESSION_FILE_DIR=./sessions
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax  # Options: Lax, Strict, None

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5004,http://127.0.0.1:5004

# Database Paths
DATABASE_PATH=data/quality_control.db
FOUNDRY_DB_PATH=C:\Users\1\Telegram\MetalFusionX\foundry.db
ROUTE_CARDS_DB_PATH=C:\Users\1\Telegram\FoamFusionLab\data\маршрутные_карты.db

# Application Settings
HOST=0.0.0.0
PORT=5004
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Security
MAX_CONTENT_LENGTH=16777216  # 16 MB in bytes
